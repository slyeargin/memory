doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Memory
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
    link(rel='stylesheet', href='./css/app.css')
  body
    h1 Memory

    .pure-g
      .pure-u-1
        table#game.pure-table.pure-table-bordered
          tbody
            - for (var i = 0; i < 5; i++)
              tr
                - for (var j = 0; j < 5; j++)
                  td.card
                    .flipper
                      .front A
                      .back

    #controls
      button#start Start
      span#timer(data-time=60) 60

